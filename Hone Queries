import pyspark.sql.functions as F
import pyspark.sql.window as W
import pyspark.sql.types as T
import pandas as pd
import numpy as np
import json

def analyze_occupancy_statistics(occupancy_df, seats):
    """Helper function to calculate detailed occupancy statistics"""
    over_capacity_df = occupancy_df[occupancy_df['percent_full'] > 100]
    if len(over_capacity_df) > 0:
        return {
            'count': len(over_capacity_df),
            'avg_over_capacity': over_capacity_df['percent_full'].mean() - 100,
            'max_over_capacity': over_capacity_df['percent_full'].max() - 100,
            'min_over_capacity': over_capacity_df['percent_full'].min() - 100,
            'std_over_capacity': over_capacity_df['percent_full'].std(),
            'avg_additional_people': int(np.mean((over_capacity_df['daily_employees'] - seats)))
        }
    return {
        'count': 0,
        'avg_over_capacity': 0,
        'max_over_capacity': 0,
        'min_over_capacity': 0,
        'std_over_capacity': 0,
        'avg_additional_people': 0
    }

def analyze_office_seat_requirements(badge_spdf):
    """
    Comprehensive analysis of office seat requirements and capacity utilization
    [Previous docstring remains the same]
    """
    daily_presence = badge_spdf.select(
        F.col('date'),
        F.concat_ws('_', F.col('date'), F.col('employee_number'), F.col('office_number')).alias('daily_employee_id')
    )
    
    daily_occupancy = daily_presence.groupBy('date') \
        .agg(F.countDistinct('daily_employee_id').alias('daily_employees')) \
        .orderBy('date')
    
    daily_occupancy_pdf = daily_occupancy.toPandas()
    daily_occupancy_pdf['date'] = pd.to_datetime(daily_occupancy_pdf['date'])
    
    total_employees = badge_spdf.select(F.countDistinct('employee_number')).first()[0]
    
    percentiles = [0.75, 0.80, 0.85, 0.90, 0.95]
    seat_analysis = {}
    
    for percentile in percentiles:
        seats = int(np.percentile(daily_occupancy_pdf['daily_employees'], percentile * 100))
        
        occupancy_df = daily_occupancy_pdf.copy()
        occupancy_df['percent_full'] = occupancy_df['daily_employees'] / seats * 100
        
        # Updated occupancy categories
        full_days = len(occupancy_df[(occupancy_df['percent_full'] >= 86) & (occupancy_df['percent_full'] <= 100)])
        vibrant_days = len(occupancy_df[(occupancy_df['percent_full'] >= 65) & (occupancy_df['percent_full'] < 86)])
        regular_days = len(occupancy_df[(occupancy_df['percent_full'] >= 30) & (occupancy_df['percent_full'] < 65)])
        empty_days = len(occupancy_df[occupancy_df['percent_full'] < 30])
        
        # Detailed over-capacity analysis
        over_capacity_stats = analyze_occupancy_statistics(occupancy_df, seats)
        
        headcount_scenarios = [0.05, 0.10, 0.15, 0.20]
        scenario_analysis = {}
        
        for change in headcount_scenarios:
            # Increase scenario
            increase_seats = int(seats * (1 + change))
            increase_occupancy_df = occupancy_df.copy()
            increase_occupancy_df['percent_full'] = increase_occupancy_df['daily_employees'] / increase_seats * 100
            
            # Updated categories for increase scenario
            increase_full_days = len(increase_occupancy_df[(increase_occupancy_df['percent_full'] >= 86) & (increase_occupancy_df['percent_full'] <= 100)])
            increase_vibrant_days = len(increase_occupancy_df[(increase_occupancy_df['percent_full'] >= 65) & (increase_occupancy_df['percent_full'] < 86)])
            increase_regular_days = len(increase_occupancy_df[(increase_occupancy_df['percent_full'] >= 30) & (increase_occupancy_df['percent_full'] < 65)])
            increase_empty_days = len(increase_occupancy_df[increase_occupancy_df['percent_full'] < 30])
            increase_over_capacity_stats = analyze_occupancy_statistics(increase_occupancy_df, increase_seats)
            
            # Decrease scenario
            decrease_seats = int(seats * (1 - change))
            decrease_occupancy_df = occupancy_df.copy()
            decrease_occupancy_df['percent_full'] = decrease_occupancy_df['daily_employees'] / decrease_seats * 100
            
            # Updated categories for decrease scenario
            decrease_full_days = len(decrease_occupancy_df[(decrease_occupancy_df['percent_full'] >= 86) & (decrease_occupancy_df['percent_full'] <= 100)])
            decrease_vibrant_days = len(decrease_occupancy_df[(decrease_occupancy_df['percent_full'] >= 65) & (decrease_occupancy_df['percent_full'] < 86)])
            decrease_regular_days = len(decrease_occupancy_df[(decrease_occupancy_df['percent_full'] >= 30) & (decrease_occupancy_df['percent_full'] < 65)])
            decrease_empty_days = len(decrease_occupancy_df[decrease_occupancy_df['percent_full'] < 30])
            decrease_over_capacity_stats = analyze_occupancy_statistics(decrease_occupancy_df, decrease_seats)
            
            scenario_analysis[change] = {
                'increase': {
                    'seats': increase_seats,
                    'full_days': increase_full_days,
                    'vibrant_days': increase_vibrant_days,
                    'regular_days': increase_regular_days,
                    'empty_days': increase_empty_days,
                    'over_capacity_stats': increase_over_capacity_stats
                },
                'decrease': {
                    'seats': decrease_seats,
                    'full_days': decrease_full_days,
                    'vibrant_days': decrease_vibrant_days,
                    'regular_days': decrease_regular_days,
                    'empty_days': decrease_empty_days,
                    'over_capacity_stats': decrease_over_capacity_stats
                }
            }
        
        seat_analysis[percentile] = {
            'recommended_seats': seats,
            'total_days': len(daily_occupancy_pdf),
            'full_days': full_days,
            'vibrant_days': vibrant_days,
            'regular_days': regular_days,
            'empty_days': empty_days,
            'over_capacity_stats': over_capacity_stats,
            'headcount_scenarios': scenario_analysis,
            'daily_occupancy_details': {
                'dates': daily_occupancy_pdf['date'].astype(str).tolist(),
                'daily_employees': daily_occupancy_pdf['daily_employees'].tolist(),
                'percent_full': occupancy_df['percent_full'].tolist()
            }
        }
    
    return {
        'total_employees': total_employees,
        'seat_analysis': seat_analysis
    }

def print_seat_analysis_report(results):
    """
    Generate a user-friendly report of the seat analysis
    """
    print("\n===== OFFICE SEATING ANALYSIS REPORT =====")
    print(f"Total Unique Employees in Office: {results['total_employees']}\n")
    
    print("Seat Requirement Analysis by Percentile:")
    print("-" * 50)
    
    for percentile, analysis in results['seat_analysis'].items():
        print(f"\n{int(percentile*100)}th Percentile Analysis:")
        print(f"Recommended Seats: {analysis['recommended_seats']}")
        print(f"Total Days Analyzed: {analysis['total_days']}")
        print("\nDaily Occupancy Breakdown:")
        print(f"Days Feeling Full (86-100% capacity): {analysis['full_days']} " +
              f"({analysis['full_days']/analysis['total_days']*100:.2f}%)")
        print(f"Days Feeling Vibrant (65-85% capacity): {analysis['vibrant_days']} " +
              f"({analysis['vibrant_days']/analysis['total_days']*100:.2f}%)")
        print(f"Regular Days (30-64% capacity): {analysis['regular_days']} " +
              f"({analysis['regular_days']/analysis['total_days']*100:.2f}%)")
        print(f"Days Feeling Empty (<30% capacity): {analysis['empty_days']} " +
              f"({analysis['empty_days']/analysis['total_days']*100:.2f}%)")
        
        print("\nOver Capacity Analysis:")
        print(f"Days Over Capacity: {analysis['over_capacity_stats']['count']}")
        if analysis['over_capacity_stats']['count'] > 0:
            print(f"Average % Over Capacity: {analysis['over_capacity_stats']['avg_over_capacity']:.1f}%")
            print(f"Maximum % Over Capacity: {analysis['over_capacity_stats']['max_over_capacity']:.1f}%")
            print(f"Minimum % Over Capacity: {analysis['over_capacity_stats']['min_over_capacity']:.1f}%")
            print(f"Standard Deviation: {analysis['over_capacity_stats']['std_over_capacity']:.1f}%")
            print(f"Average Additional People: {analysis['over_capacity_stats']['avg_additional_people']}")
        
        print("\nHeadcount Change Scenarios:")
        for change, scenario in analysis['headcount_scenarios'].items():
            print(f"\n{change*100}% Headcount Change:")
            
            print("  Seat Increase Scenario:")
            print(f"    Seats: {scenario['increase']['seats']}")
            print(f"    Full Days (86-100%): {scenario['increase']['full_days']}")
            print(f"    Vibrant Days (65-85%): {scenario['increase']['vibrant_days']}")
            print(f"    Regular Days (30-64%): {scenario['increase']['regular_days']}")
            print(f"    Empty Days (<30%): {scenario['increase']['empty_days']}")
            if scenario['increase']['over_capacity_stats']['count'] > 0:
                print(f"    Over Capacity Days: {scenario['increase']['over_capacity_stats']['count']}")
                print(f"    Average % Over Capacity: {scenario['increase']['over_capacity_stats']['avg_over_capacity']:.1f}%")
            
            print("\n  Seat Decrease Scenario:")
            print(f"    Seats: {scenario['decrease']['seats']}")
            print(f"    Full Days (86-100%): {scenario['decrease']['full_days']}")
            print(f"    Vibrant Days (65-85%): {scenario['decrease']['vibrant_days']}")
            print(f"    Regular Days (30-64%): {scenario['decrease']['regular_days']}")
            print(f"    Empty Days (<30%): {scenario['decrease']['empty_days']}")
            if scenario['decrease']['over_capacity_stats']['count'] > 0:
                print(f"    Over Capacity Days: {scenario['decrease']['over_capacity_stats']['count']}")
                print(f"    Average % Over Capacity: {scenario['decrease']['over_capacity_stats']['avg_over_capacity']:.1f}%")
    
    print("\n===== END OF REPORT =====")

def create_visualizations(results):
    """
    Create display-friendly visualizations for Databricks
    """
    visualizations = []
    
    for percentile, analysis in results['seat_analysis'].items():
        occupancy_schema = T.StructType([
            T.StructField("date", T.DateType(), True),
            T.StructField("daily_employees", T.IntegerType(), True),
            T.StructField("percent_full", T.DoubleType(), True),
            T.StructField("seat_utilization", T.StringType(), True)
        ])
        
        occupancy_rows = []
        dates = analysis['daily_occupancy_details']['dates']
        daily_employees = analysis['daily_occupancy_details']['daily_employees']
        percent_full = analysis['daily_occupancy_details']['percent_full']
        
        for date, employees, pct_full in zip(dates, daily_employees, percent_full):
            # Updated utilization categories
            if pct_full > 100:
                utilization = 'Over Capacity'
            elif pct_full >= 86:
                utilization = 'Full'
            elif pct_full >= 65:
                utilization = 'Vibrant'
            elif pct_full >= 30:
                utilization = 'Regular'
            else:
                utilization = 'Empty'
            
            parsed_date = pd.to_datetime(date).date()
            occupancy_rows.append((parsed_date, employees, pct_full, utilization))
        
        occupancy_df = spark.createDataFrame(occupancy_rows, schema=occupancy_schema)
        visualizations.append(occupancy_df)
    
    return visualizations

